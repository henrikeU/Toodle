<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin" android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin" android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.louis_edouard.toodle.ContactProfileFragment">

    <TextView android:text="PERSONNEL" android:paddingLeft="10dp" android:textSize="18dp" android:textColor="#1569c7"
        android:layout_width="wrap_content" android:layout_height="wrap_content" />
    <ImageView android:src="@drawable/profile_section" android:layout_width="match_parent" android:layout_height="5dp"/>
    <TextView android:text="Nom complet" android:paddingLeft="5dp" android:textSize="16dp" android:textColor="#625D5D"
        android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginBottom="2dp"
        android:textStyle="bold"/>
    <TextView android:id="@+id/profile_name" android:paddingLeft="10dp" android:textColor="#000"
        android:layout_width="match_parent" android:layout_height="wrap_content" />
    <TextView android:text="Adresse courriel" android:paddingLeft="5dp" android:textSize="16dp" android:textColor="#625D5D"
        android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginBottom="2dp"
        android:textStyle="bold"/>
    <TextView android:id="@+id/profile_email" android:paddingLeft="10dp" android:textColor="#000"
        android:layout_width="wrap_content" android:layout_height="wrap_content" />
    <TextView android:text="Telephone" android:paddingLeft="5dp" android:textSize="16dp" android:textColor="#625D5D"
        android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginBottom="2dp"
        android:textStyle="bold"/>
    <TextView android:id="@+id/profile_phone" android:padding="5dp" android:textColor="#000"
        android:layout_width="match_parent" android:layout_height="wrap_content" />
    <TextView android:text="ADRESSE" android:paddingLeft="10dp" android:textSize="18dp" android:textColor="#1569c7"
        android:layout_width="wrap_content" android:layout_height="wrap_content" />
    <ImageView android:src="@drawable/profile_section" android:layout_width="match_parent" android:layout_height="5dp"/>
    <TextView android:id="@+id/profile_address" android:padding="5dp"
        android:layout_width="match_parent" android:layout_height="wrap_content" />
    <TextView android:id="@+id/profile_city" android:padding="5dp"
        android:layout_width="match_parent" android:layout_height="wrap_content" />
    <TextView android:id="@+id/profile_country" android:padding="5dp"
        android:layout_width="match_parent" android:layout_height="wrap_content" />

</LinearLayout>
