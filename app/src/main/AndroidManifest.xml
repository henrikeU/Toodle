<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.louis_edouard.toodle">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".DetailsActivity" />
        <activity
            android:name=".CoursContentActivity"
            android:parentActivityName=".CoursActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".CoursActivity" />
        </activity>
        <activity android:name=".SendMessageActivity" />
        <activity android:name=".ConversationActivity" />
        <activity android:name=".Preference" />
        <activity
            android:name=".HomeDrawerActivity"
            android:label="@string/title_activity_home_drawer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CoursActivity"
            android:label="@string/title_activity_cours_drawer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MessageActivity"
            android:label="@string/title_activity_message_drawer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CalendarActivity"
            android:label="@string/title_activity_calendar_drawer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ContactActivity"
            android:label="@string/title_activity_contact_drawer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".CalendarPrivateActivity" />
        <activity android:name=".CalendarPublicActivity" />
        <activity android:name=".CalendarAddEventActivity"></activity>
    </application>

</manifest>
