<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.louis_edouard.toodle.ConversationActivity">
    <ListView
        android:id="@+id/listView_Conversation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#00000000"
        android:dividerHeight="10dp"
        android:drawSelectorOnTop="true"
        android:layout_marginBottom="5dp"
        android:layout_above="@+id/editText_Message"></ListView>

    <EditText
        android:id="@+id/editText_Message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:maxHeight="100dp"
        android:inputType="textMultiLine"
        android:hint="Ã‰crivez votre message"
        android:ems="10"
        android:background="@drawable/edittext_login"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/btn_send"
        android:layout_toLeftOf="@+id/btn_send"
        android:layout_marginRight="5dp"
        android:paddingLeft="5dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Envoyer"
        android:background="@drawable/button_rounded_corners"
        android:id="@+id/btn_send"
        android:textColor="#fff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/editText_Message"
        android:layout_alignTop="@+id/editText_Message"
        android:padding="5dp" />

</RelativeLayout>
